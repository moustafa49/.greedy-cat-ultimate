autoBtn.onclick = ()=>{
  const {top5} = computeTop5();
  top5.forEach(e=>{
    memory.push({emoji:e, t:Date.now()});
    if(memory.length>MEMORY_MAX) memory = memory.slice(-MEMORY_MAX);
  });
  localStorage.setItem('gc_ultra_memory', JSON.stringify(memory));
  updateAll();
};
clearBtn.onclick = clearMemory;

