function detectTrick(){
  const arr = lastN(3);
  if(arr.length<3) return {trick:false, reason:''};
  const same = arr.every(x=> isMeat(x) === isMeat(arr[0]));
  if(same) return {trick:true, reason: isMeat(arr[0]) ? 'Ø³Ù„Ø³Ù„Ø© Ù„Ø­ÙˆÙ… Ù‚ØµÙŠØ±Ø© (Ù…Ø­ØªÙ…Ù„ ØªØ¶Ù„ÙŠÙ„)' : 'Ø³Ù„Ø³Ù„Ø© Ø®Ø¶Ø§Ø± Ù‚ØµÙŠØ±Ø© (Ù…Ø­ØªÙ…Ù„ ØªØ¶Ù„ÙŠÙ„)'};
  return {trick:false, reason:''};
}

